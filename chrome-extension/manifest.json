{
  "manifest_version": 3,
  "name": "StudySphere",
  "version": "1.0",
  "description": "Tracks distracting websites and alerts the user.",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage",
    "idle",
    "notifications"
  ],
  "host_permissions": [
    "http://localhost:8080/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "StudySphere"
  }
}
